sudo apt-get libshogun-dev         # for C++ developers building extensions using libshogun
sudo apt-get shogun-csharp-modular # for the modular csharp interface
sudo apt-get shogun-lua-modular    # for the modular lua interface
sudo apt-get shogun-java-modular   # for the modular java interface
sudo apt-get shogun-octave-static  # for the static octave interface
sudo apt-get shogun-octave-modular # for the modular octave interface
sudo apt-get shogun-python-static  # for the static python interface
sudo apt-get shogun-python-modular # for the modular python interface
sudo apt-get shogun-r-static       # for the static r interface
sudo apt-get shogun-ruby-modular   # for the modular ruby interface
sudo apt-get shogun-cmdline-static # for the static command-line interface.
sudo apt-get shogun-elwms-static   # for the static eierlegende wollmilchsau interface (one interface to r/python/octave allowing to run commands in non-native languages) 
sudo apt-get shogun-doc            # for the documentation
